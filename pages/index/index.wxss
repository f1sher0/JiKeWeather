/**index.wxss**/
/* 整体 */
.wrapper {
  display: flex;
  height: 100vh;
  flex-direction: column;
  align-items: center;
  width: 100vw;
  /* background: -webkit-linear-gradient(top, #3d395a, #435f6d);  */
}
/* 弹窗遮罩 */
.cover{
  z-index: 1000;
  width: 100%;
  height: 100%;
  position: fixed;
  top:0;
  left:0;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.2);
}
.cover_child{
  position: relative;
  width: 80%;
  height: 50%;
  background-color: white;
  border-radius: 5%;
  display: flex;
  flex-direction: column;
}
.share_cover{
  position: relative;
  width: 75%;
  height: 35%;
  background-color: white;
  border-radius: 5%;
  display: flex;
  flex-direction: column;
}
.suggestion_cover{
  position: relative;
  width: 65%;
  height: 31%;
  background-color: white;
  border-radius: 5%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.dialog{
  margin-top: 1.5vh;
  width: 100%;
  height: 12%;
  display: flex;
  justify-content: center;
}
.indice_title{
  margin-top: 0.5vh;
  width: 97%;
  height: 28%;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 15rpx;
  background-color: rgb(177, 220, 211);
}
.suggestion_info{
  width: 85%;
  height: 45%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.choice-area{
  height: 70%;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  flex-wrap: wrap;
  align-content: space-around;
}
.choice{
  display: flex;
  flex-direction: column;
  height: 30%;
  width: 33%;
  align-items: center;
  position: relative;
}
.choice_weather{
  display: flex;
  flex-direction: column;
  height: 40%;
  width: 33%;
  align-items: center;
  position: relative;
}
.choice-icon{
  padding: 15rpx;
  height: 70rpx;
  width: 70rpx;
  border-radius: 50%;
  box-shadow: 5rpx 5rpx 10rpx rgba(0, 0, 0, 0.5);
}
.btn-group {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  display: flex;
  justify-content: space-around;
  font-weight: bold;
  padding: 20rpx 0;
}
/* 搜索框整体 */
.search {
  margin-top: 1.5vh;
  height: 4.5vh;
  width: 80vw;
  display: flex;
  border-radius: 10rpx;
  background-color: white;
}

/* 搜索框左侧输入部分 */
.left {
  display: flex;
  height: 100%;
  padding: 0 3vw;
  flex: 5;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

/* 输入区域 */
.inputField {
  height: 100%;
  width: 100%;
  font-size: medium;
  font-style: oblique;
  color: black;
}

/* 清空按钮 */
.clearBtn {
  height: 50rpx;
  width: 55rpx;
}

/* 分隔符 */
.seperator {
  height: 5vh;
  width: 3rpx;
  border-left: solid 3rpx gray;
}

/* 搜索框右侧部分 */
.right {
  display: flex;
  height: 100%;
  flex: 1;
}

/* 搜索按钮 */
.searchBtn {
  height: 100%;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 搜索图标 */
.searchIcon {
  height: 50rpx;
  width: 50rpx;
}

/* 头部信息栏 */
.header {
  height: 5.5vh;
  width: 100%;
  margin-top: 1vh;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: white;
}

/* 当前地点和时间 */
.pos_time {
  display: flex;
  height: 100%;
  justify-content: flex-start;
  align-items: center;
  margin-top: 1vh;
}

/* 位置图标 */
.localIcon {
  margin-left: 2vw;
  height: 35rpx;
  width: 35rpx;
}

.city {
  font-size: 10pt;
  margin-left: 1vw;
  min-width: 30%;
  max-width: 48%;
}

.date {
  margin-left: 1vw;
  font-size: 10pt;
}

/* 更新 */
.update {
  display: flex;
  height: 100%;
  min-width: 23%;
  justify-content: flex-end;
  align-items: center;
  font-size: 10pt;
  color: white;
  margin-top: 0.6vh;
}

.refreshIcon {
  height: 30rpx;
  width: 30rpx;
  margin-left: 1vw;
  margin-right: 1vw;
}

.weather_block{
  margin-top: 1vh;
  display: flex;
  height: 29vh;
  width: 100%;
}

/* 当前天气整体 */
.current {
  height: 100%;
  width: 80%;
  display: flex;
  position: relative;
}
/* 设置整体 */
.settings{
  margin-top: 0.5vh;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  width: 18%;
  margin-right: 1vw;
}
.share_weather{
  height: 15%;
  width: 40%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.16);
  border-radius: 10%;
}
.POI-settings{
  margin-left: 48%;
  height: 60rpx;
  width: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.25);
  border-radius: 50%;
}
.base_info{
  width: 70%;
  height: 100%;
  position: absolute;
  right: 0;
  top: 0;
  display: flex;
  align-items: center;
  flex-direction: column;
}
/* 温度 */
.temperature {
  height: 38%;
  width: 45%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 53pt;
  color: whitesmoke;
}

/* 摄氏度标志 */
.t_symbol {
  margin-left: 1vw;
  font-size: 20pt;
  padding-top: 5vh;
}
.weather_detail{
  display: flex;
  height: 30%;
  width: 100%;
  justify-content: space-around;
  align-items: center;
}
/* 轮播图整体 */
.POI_swiper {
  z-index: 100;
  height: 36vh;
  width: 100%;
  margin-top: 1vh;
  margin-bottom: 0.5vh;
  border-radius: 40rpx;
  background-color: rgba(0, 0, 0, 0.25);
}

/* 轮播图块 */
.swiper_block {
  display: flex;
  align-items: center;
  font-size: 10pt;
  color: white;
}

/* 轮播图边框 */
.blank {
  display: flex;
  height: 100%;
  width: 10%;
  align-items: center;
}

/* 轮播图内容 */
.POI-content {
  padding-top: 3%;
  display: flex;
  flex-direction: column;
  width: 80%;
  height: 97%;
}

.arrowIcon {
  margin-left: 2vw;
  height: 55rpx;
  width: 45rpx;
}

.POI-info {
  margin-top: 1vh;
  display: flex;
  flex-direction: row;
  height: 28%;
  align-items: center;
}

.POI-name{
  display: flex;
  width: 40%;
  font-size:13pt;
  justify-content: flex-start;
}

.POI-category{
  margin-left: 1vw;
}

.POI-detail{
  display: flex;
  margin-left: 5vw;
  width: 25%;
  height: 75%;
  align-items: center;
}

.POI-weather {
  margin-top: 1vh;
  height: 72%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.POI-icon{
  margin-left: 1vw;
  height: 45rpx;
  width: 45rpx;
}

.POI-suggestion{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 90%;
  height: 22%;
  background-color: rgba(0, 0, 0, 0.1);
  border-radius: 18rpx;
}
.suggestion_swiper{
  display: flex;
  margin-top: 0.75vh;
  width: 100%;
  height: 18vh;
  background-color: rgba(0, 0, 0, 0.25);
}

.suggestion{
  display: flex;
  justify-content: space-around;
}

.item{
  margin-top: 2.5vh;
  width: 18%;
  height: 65%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.suggestion-icon{
  height: 40%;
  width: 100%;
}

.suggestion_content{
  margin-top: 1vh;
  width: 100%;
  height: 30%;
  font-size: 9pt;
  color: white;
  align-items: center;
  display: flex;
  justify-content: center;
}

.suggestion_tip{
  margin-top: 0.5vh;
  height: 20%;
  color: whitesmoke;
  font-size: 12pt;
  font-weight: 600;
}